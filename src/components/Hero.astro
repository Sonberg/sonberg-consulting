<section class="hero">
  <!-- Background Elements -->
  <div class="hero-bg">
     <div class="blob blob-1"></div>
     <div class="blob blob-2"></div>
  </div>

  <div class="container hero-content">
    <div class="hero-text">
        <p class="subtitle">Strategic Business Solutions</p>
        <h1 class="title">
          Navigate Complexity with <span class="highlight">Confidence</span>
        </h1>
        <p class="description">
          We provide expert consulting to help forward-thinking companies solve problems, improve performance, and build value.
        </p>
        <div class="actions">
          <a href="#contact" class="btn btn-primary">
            Start Your Journey
          </a>
          <a href="#services" class="btn btn-secondary">
            Explore Services
          </a>
        </div>
    </div>
    
    <div class="hero-visual">
        <div class="card">
             <div class="card-header">
                <div class="icon-box">
                    <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" width="24" height="24">
                        <path stroke-linecap="round" stroke-linejoin="round" d="M3.75 13.5l10.5-11.25L12 10.5h8.25L9.75 21.75 12 13.5H3.75z" />
                    </svg>
                </div>
                <div>
                    <div class="card-title">Efficiency Increase</div>
                    <div class="card-stat">
                        +124% 
                        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" width="16" height="16">
                            <path fill-rule="evenodd" d="M10 17a.75.75 0 01-.75-.75V5.612L5.29 9.77a.75.75 0 01-1.08-1.04l5.25-5.5a.75.75 0 011.08 0l5.25 5.5a.75.75 0 11-1.08 1.04l-3.96-4.158V16.25A.75.75 0 0110 17z" clip-rule="evenodd" />
                        </svg>
                    </div>
                </div>
             </div>
             <div class="chart-lines">
                <div class="line-container">
                    <div class="line line-1"></div>
                </div>
                <div class="line-container">
                    <div class="line line-2"></div>
                </div>
                <div class="line-container">
                    <div class="line line-3"></div>
                </div>
             </div>
        </div>
    </div>
  </div>
</section>

<style>
    .hero {
        min-height: 100vh;
        display: flex;
        align-items: center;
        padding-top: 5rem;
        position: relative;
        overflow: hidden;
    }

    .hero-bg {
        position: absolute;
        inset: 0;
        z-index: 0;
        opacity: 0.2;
        pointer-events: none;
    }

    .blob {
        position: absolute;
        border-radius: 50%;
    }

    .blob-1 {
        top: 5rem;
        right: 0;
        width: 500px;
        height: 500px;
        background-color: rgba(212, 175, 55, 0.2);
        filter: blur(100px);
    }

    .blob-2 {
        bottom: 0;
        left: 0;
        width: 300px;
        height: 300px;
        background-color: rgba(59, 130, 246, 0.1);
        filter: blur(80px);
    }

    .hero-content {
        position: relative;
        z-index: 10;
        display: grid;
        gap: 3rem;
        align-items: center;
    }

    @media(min-width: 768px) {
        .hero-content {
            grid-template-columns: 1fr 1fr;
        }
    }

    .subtitle {
        color: var(--color-gold-500);
        font-weight: 500;
        margin-bottom: 1rem;
        letter-spacing: 0.05em;
        text-transform: uppercase;
        font-size: 0.875rem;
    }

    .title {
        font-size: 3rem;
        font-weight: 700;
        margin-bottom: 1.5rem;
        color: var(--color-slate-100);
        line-height: 1.1;
    }

    @media(min-width: 768px) {
        .title {
            font-size: 3.75rem;
        }
    }

    .highlight {
        color: var(--color-gold-500);
    }

    .description {
        font-size: 1.125rem;
        color: var(--color-slate-300);
        margin-bottom: 2rem;
        max-width: 32rem;
    }

    .actions {
        display: flex;
        flex-direction: column;
        gap: 1rem;
    }

    @media(min-width: 640px) {
        .actions {
            flex-direction: row;
        }
    }

    .btn {
        padding: 0.875rem 2rem;
        border-radius: 0.25rem;
        font-weight: 600; /* Update 1: slightly lighter font weight */
        text-align: center;
        transition: all 0.2s;
        cursor: pointer; /* Update 2: add cursor pointer */
        display: inline-block; /* Update 3: ensure it behaves like a block for padding */
    }

    .btn-primary {
        background-color: var(--color-gold-500);
        color: var(--color-navy-900);
    }

    .btn-primary:hover {
        background-color: #e5bd3d;
    }

    .btn-secondary {
        border: 1px solid var(--color-slate-300);
        color: var(--color-slate-300);
    }

    .btn-secondary:hover {
        border-color: var(--color-gold-500);
        color: var(--color-gold-500);
    }

    .hero-visual {
        display: none;
        position: relative;
    }

    @media(min-width: 768px) {
        .hero-visual {
            display: block;
        }
    }

    .card {
        position: relative;
        z-index: 10;
        background-color: var(--color-navy-800);
        padding: 1.5rem;
        border-radius: 0.5rem;
        border: 1px solid #233554;
        box-shadow: 0 25px 50px -12px rgba(0, 0, 0, 0.25);
        transform: rotate(3deg);
        transition: transform 0.5s;
    }

    .card:hover {
        transform: rotate(0deg);
    }

    .card-header {
        display: flex;
        gap: 1rem;
        margin-bottom: 1rem;
        align-items: center;
        border-bottom: 1px solid #233554;
        padding-bottom: 1rem;
    }

    .icon-box {
        width: 3rem;
        height: 3rem;
        background-color: rgba(212, 175, 55, 0.2);
        border-radius: 9999px;
        display: flex;
        align-items: center;
        justify-content: center;
        color: var(--color-gold-500);
    }

    .card-title {
        color: var(--color-slate-100);
        font-weight: 700;
    }

    .card-stat {
        color: #4ade80;
        font-size: 0.875rem;
        display: flex;
        align-items: center;
        gap: 0.25rem;
    }

    .chart-lines {
        display: flex;
        flex-direction: column;
        gap: 0.75rem;
    }

    .line-container {
        height: 0.5rem;
        background-color: #233554;
        border-radius: 0.25rem;
        width: 100%;
    }

    .line {
        height: 100%;
        border-radius: 0.25rem;
    }

    .line-1 { background-color: var(--color-gold-500); width: 75%; }
    .line-2 { background-color: rgba(212, 175, 55, 0.6); width: 50%; }
    .line-3 { background-color: rgba(212, 175, 55, 0.3); width: 85%; }
</style>
