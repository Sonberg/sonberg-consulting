<section id="contact" class="contact-section">
  <div class="container contact-container">
    <div class="header-center">
      <h2 class="title">Get in Touch</h2>
      <p class="subtitle">Ready to start your transformation? Contact us today.</p>
    </div>

    <div class="contact-card">
       <div class="info-column">
          <div class="info-item">
             <h4 class="info-label">Location</h4>
             <p class="info-text">Stockholm, Sweden</p>
          </div>
          <div class="info-item">
             <h4 class="info-label">Email</h4>
             <p class="info-text">per.sonberg@gmail.com</p>
          </div>
       </div>

       <form class="contact-form">
          <div class="form-group">
            <label for="name" class="form-label">Name</label>
            <input type="text" id="name" class="form-input" placeholder="John Doe" />
          </div>
          <div class="form-group">
            <label for="email" class="form-label">Email</label>
            <input type="email" id="email" class="form-input" placeholder="john@example.com" />
          </div>
          <div class="form-group">
            <label for="message" class="form-label">Message</label>
            <textarea id="message" rows="4" class="form-input" placeholder="How can we help?"></textarea>
          </div>
          <button type="submit" class="submit-btn">
            Send Message
          </button>
       </form>
    </div>
  </div>
</section>

<style>
    .contact-section {
        padding-top: 6rem;
        padding-bottom: 6rem;
        background-color: var(--color-navy-800);
    }

    .contact-container {
        max-width: 56rem; /* max-w-4xl roughly */
        margin: 0 auto;
    }

    .header-center {
        text-align: center;
        margin-bottom: 4rem;
    }

    .title {
        font-size: 1.875rem;
        font-weight: 700;
        margin-bottom: 1rem;
        color: var(--color-slate-100);
    }

    @media(min-width: 768px) {
        .title {
            font-size: 2.25rem;
        }
    }

    .subtitle {
        color: var(--color-slate-300);
    }

    .contact-card {
        background-color: var(--color-navy-900);
        padding: 2rem;
        border-radius: 0.5rem;
        border: 1px solid #233554;
        box-shadow: 0 20px 25px -5px rgba(0, 0, 0, 0.1), 0 10px 10px -5px rgba(0, 0, 0, 0.04);
        display: grid;
        gap: 3rem;
    }

    @media(min-width: 768px) {
        .contact-card {
            grid-template-columns: 1fr 1fr;
            padding: 3rem;
        }
    }

    .info-column {
        display: flex;
        flex-direction: column;
        gap: 2rem;
    }

    .info-label {
        font-size: 1.125rem;
        font-weight: 700;
        color: var(--color-slate-100);
        margin-bottom: 0.5rem;
    }

    .info-text {
        color: #8892b0;
    }

    .contact-form {
        display: flex;
        flex-direction: column;
        gap: 1rem;
    }

    .form-group {
        display: flex;
        flex-direction: column;
    }

    .form-label {
        font-size: 0.875rem;
        font-weight: 500;
        color: var(--color-slate-300);
        margin-bottom: 0.25rem;
    }

    .form-input {
        width: 100%;
        background-color: var(--color-navy-800);
        border: 1px solid #233554;
        border-radius: 0.25rem;
        padding: 0.5rem 1rem;
        color: var(--color-slate-100);
        outline: none;
        transition: border-color 0.2s;
        font-family: inherit;
    }

    .form-input:focus {
        border-color: var(--color-gold-500);
    }

    .submit-btn {
        width: 100%;
        background-color: var(--color-gold-500);
        color: var(--color-navy-900);
        font-weight: 700;
        padding: 0.75rem;
        border: none;
        border-radius: 0.25rem;
        cursor: pointer;
        transition: background-color 0.2s;
        font-size: 1rem;
    }

    .submit-btn:hover {
        background-color: #e5bd3d;
    }
</style>
